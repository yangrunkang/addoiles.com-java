<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shamrock.cms.dao.AdminDao">
  <insert id="addAdmin" parameterType="com.shamrock.cms.entity.Admin">
  	insert into admin(name,password,createTime)
  	values(#{name},#{password},#{createTime})
  	<selectKey resultType="long" keyProperty="adminId">
       select last_insert_id()
  	</selectKey>
  </insert>
  
  <delete id="deleteAdmin" parameterType="long">
  	delete from admin where adminId=#{adminId}
  </delete>
  
  <update id="updateAdminByadminId">
  	update admin set password=#{password} where adminId=#{adminId}
  </update>
  <select id="getAllList" resultType="com.shamrock.cms.entity.Admin">
  	select * from admin limit #{offset},#{rows}
  </select>
  
  <select id="getAllListCount" resultType="int">
     select count(*) from admin
  </select>
  
  <select id="getAdminByName" resultType="com.shamrock.cms.vo.AdminVo">
  	select * from admin where name=#{name}
  </select>
  
  <select id="getAdminById" resultType="com.shamrock.cms.entity.Admin">
  	select * from admin where adminId=#{adminId}
  </select>
</mapper>