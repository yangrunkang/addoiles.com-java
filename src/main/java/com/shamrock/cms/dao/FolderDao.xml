<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shamrock.cms.dao.FolderDao">

	<!-- ############################## -->
	<!-- ###### 增加 ###### -->
	<!-- ############################## -->

	<insert id="addFolder" parameterType="com.shamrock.cms.entity.Folder">
		insert into
		folder(fatherId,ename,name,content,path,level,sort,count,status,`check`,createTime,title,logo)
		value(#{fatherId},#{ename},#{name},#{content},#{path},#{level},#{sort},#{count},#{status},#{check},#{createTime},#{title},#{logo})
		<selectKey resultType="long" keyProperty="folderId">
			SELECT
			LAST_INSERT_ID()
		</selectKey>
	</insert>

	<!-- ############################## -->
	<!-- ###### 删除 ###### -->
	<!-- ############################## -->

	<delete id="deleteFolder" parameterType="long">
		delete from folder
		where
		folderId=#{folderId}
	</delete>

	<!-- ############################## -->
	<!-- ###### 修改 ###### -->
	<!-- ############################## -->
	<update id="updateSort" parameterType="long">
		update folder set
		sort=#{sort} where folderId=#{folderId}
	</update>

	<update id="updateAll" parameterType="com.shamrock.cms.entity.Folder">
		update folder
		set ename=#{ename},name=#{name},content=#{content},title=#{title},logo=#{logo}
		where folderId=#{folderId}
	</update>

	<update id="updateCount">
		update folder set count=#{count} where
		folderId=#{folderId}
	</update>
	
	<update id="updateFatherIdPathLevel">
		update folder set fatherId=#{fatherId},path=#{path},level=#{level}
		where folderId=#{folderId}
	</update>

	<update id="updatePathLevel">
		update folder set path=#{path},level=#{level} where
		folderId=#{folderId}
	</update>
	
	<update id="updateFolderById">
		update folder set name=#{name},ename=#{ename},status=#{status},content=#{content},height=#{height},width=#{width} where folderId=#{folderId}
	</update>

	<!-- ############################## -->
	<!-- ###### 查询 ###### -->
	<!-- ############################## -->

	<select id="getFolderById" resultType="com.shamrock.cms.vo.FolderVo">
		select * from folder where
		folderId=#{folderId}
	</select>

	<select id="getFolderListByFatherId" resultType="com.shamrock.cms.vo.FolderVo">
		select * from folder where fatherId=#{fatherId}
		<if test="status !=null">and status = #{status}</if>
		order by sort
	</select>

	<select id="getAllFolderList" resultType="com.shamrock.cms.vo.FolderVo">
		select * from folder order by path,sort
	</select>

	<select id="getFolderByEname" resultType="com.shamrock.cms.entity.Folder">
		select * from folder
		where ename=#{ename}
	</select>

</mapper>  
